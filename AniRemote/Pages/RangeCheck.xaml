<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AniRemote.Pages.RangeCheck"
				 xmlns:cntrl="clr-namespace:AniRemote.Pages"
             xmlns:viewmodel="clr-namespace:AniRemote.ViewModels"
				 x:DataType="viewmodel:AnimViewModel"
             Title="Range Check"
				 Appearing="ContentPage_Appearing">
	<Grid x:Name="gridRangeCheck">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<cntrl:RangeSlider x:Name="rsLeftRight" Grid.Column="0" HeaderText="LeftRight" />
		<cntrl:RangeSlider x:Name="rsUpDown" Grid.Column="1" HeaderText="UpDown" />
		<cntrl:RangeSlider x:Name="rsBottomLeft" Grid.Column="2" HeaderText="BottomLeft" />
		<cntrl:RangeSlider x:Name="rsTopLeft" Grid.Column="3" HeaderText="TopLeft" />
		<cntrl:RangeSlider x:Name="rsBottomRight" Grid.Column="4" HeaderText="BottomRight" />
		<cntrl:RangeSlider x:Name="rsTopRight" Grid.Column="5" HeaderText="TopRight" />
	</Grid>
</ContentPage>